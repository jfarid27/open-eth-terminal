    "version": "0.2.0",
    "configurations": [
        {
          "name": "Deno: Attach",
          "type": "node",
          "request": "attach",
          "port": 9229,
          "address": "localhost",
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        },
        {
          "name": "Deno: Launch (Interactive)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceFolder}",
          "runtimeExecutable": "deno",
          "runtimeArgs": [
            "run",
            "start"
          ],
          "console": "integratedTerminal",
          "stopOnEntry": true 
        }
    ]
}